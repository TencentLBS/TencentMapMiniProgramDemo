/* pages/plugin/location-picker/location.wxss */
.map-view-container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;

}
.map-view-content {
  background: #FFF;
  padding:20px 20px 0;
  margin-top: 10px;
}
.feature-container {
	padding-left: 20px;
	background: #fff;
}
.feature-content {
	padding-right: 20px;
}
.control-btn-increase {
  top:73px;
}
.control-btn-decrease {
  bottom: 72px;
}
.active {
	color: #222;
	font-weight: 500;
}
.feature-txt-left {
  padding-right: 15px;
}
.feature-txt-left:after {
  content: '';
  height:10px;
  width:5px;
  background: rgba(34,34,34,0.1);
}
.feature-txt-right {
  padding-left: 15px;
}
.link {
	color: #3875FF;
	font-weight:500;
}
.custom-icon {
	margin-right: 5px;
	width: 24px;
	height: 24px;
}

.fontsize-active {
	color: #222;
	font-weight: 500;
}

