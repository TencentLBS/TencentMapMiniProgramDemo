/* pages/components/tab/tab.wxss */
.tab-container{
	width: 100%;
	height: 40px;
	background: #FFF;
}
.tab{
	padding-left: 20px;
	box-sizing: border-box;
	width: 100%;
	height: 100%;
	white-space: nowrap;
	overflow: hidden;
	line-height: 39px;
	background: #FFF;
}
.tab-item{
	font-family: SourceHanSansCN-Normal;
	display: inline-block;
	margin-right: 40px;
	font-size: 14px;
	color: rgba(34,34,34,1);
}
.tab-item:last-child {
	margin-right: 0;
}

.item{
	width:fit-content;
	font-family: SourceHanSansCN-Normal;
	margin: auto;
	font-size: 14px;
	height: 39px;
}

.active{
  color: #3875FF;
	border-bottom: 2px solid #3875FF;
	font-weight:600;
}
